@model ozowebapp.Models.NatjecajClass

@{
    ViewData["Title"] = "Details";
}

<h2 style="margin-top:50px;">Natječaji</h2>

<div>
    <h4>Detalji</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Naziv)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Naziv)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Cijena)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cijena)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Opis)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Opis)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Lokacija)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Lokacija)
        </dd>
        <dt>
            Zanimanja
        </dt>
        @for (int i = 0; i < Model.NatjecajToZanimanjes.Count; i++)
        {

            <dd>

                @Html.DisplayFor(model => model.NatjecajToZanimanjes[i].Naziv, new { Style = "font-size:20px;" })
                &nbsp;&nbsp;&nbsp;&nbsp;
                Broj radnika:
                @Html.DisplayFor(model => model.NatjecajToZanimanjes[i].Kolicina)
                <br />

            </dd>
        }
        <br />

        <dt>
            Oprema
        </dt>
        @for (int i = 0; i < Model.NatjecajToOpremas.Count; i++)
        {

            <dd>

                @Html.DisplayFor(model => model.NatjecajToOpremas[i].Naziv)
                &nbsp;&nbsp;&nbsp;&nbsp;
                Količina:
                @Html.DisplayFor(model => model.NatjecajToOpremas[i].Kolicina)
                <br />

            </dd>
        }
    </dl>
</div>
<br />
<br />

<div>
    <a asp-action="Index">Nazad na popis</a>
</div>
