@model ozowebapp.Models.UslugaClass

@{
    ViewData["Title"] = "Delete";
}

<h2 style="margin-top:50px;">Usluge</h2>

<h3>Izbriši uslugu</h3>
<div>
    <h4>Jeste li sigurni?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Naziv)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Naziv)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Cijena)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cijena)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Opis)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Opis)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Lokacija)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Lokacija)
        </dd>
        <dt>
            Zanimanja
        </dt>
        @for (int i = 0; i < Model.UslugaToZanimanjes.Count; i++)
        {

            <dd>

                Naziv
                @Html.DisplayFor(model => model.UslugaToZanimanjes[i].Naziv)
                &nbsp;
                Količina
                @Html.DisplayFor(model => model.UslugaToZanimanjes[i].Kolicina)
                <br />

            </dd>
        }
        <dt>
            Oprema
        </dt>
        @for (int i = 0; i < Model.UslugaToOpremas.Count; i++)
        {

            <dd>
                Naziv
                @Html.DisplayFor(model => model.UslugaToOpremas[i].Naziv)
                &nbsp;
                Količina
                @Html.DisplayFor(model => model.UslugaToOpremas[i].Kolicina)
                <br />

            </dd>
        }
    </dl>
    <br />
    <br />

    <form asp-action="Delete">
        <input type="hidden" asp-for="UslugaClassID" />
        <input type="submit" value="Izbriši" class="btn btn-warning" /> &nbsp
        <a asp-action="Index">Nazad na popis</a>
    </form>
</div>
