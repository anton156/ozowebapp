@model ozowebapp.Models.UslugaViewModel

@{
    ViewData["Title"] = "Create";
}

<h2 style="margin-top:50px;">Usluge</h2>

<h4>Dodaj novu uslugu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cijena" class="control-label"></label>
                <input asp-for="Cijena" class="form-control" type="number" min="0" step="1" />
                <span asp-validation-for="Cijena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lokacija" class="control-label"></label>
                <input asp-for="Lokacija" class="form-control" />
                <span asp-validation-for="Lokacija" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Zanimanja</label>
                <br />
                <table>
                    @for (int i = 0; i < Model.Zanimanja.Capacity; i++)
                    {
                        <tr>
                            <td>
                                @Html.HiddenFor(x => Model.Zanimanja[i].ID)
                                @Html.HiddenFor(y => Model.Zanimanja[i].Ime)
                                -&nbsp;
                                @Html.DisplayFor(it => Model.Zanimanja[i].Ime)                               
                            </td>

                            <td>
                                &nbsp;
                                &nbsp;
                                &nbsp;
                                @Html.TextBoxFor(it => Model.Zanimanja[i].Kolicina, new { Style = "vertical-align:3px; margin-top:3px; width:65px;", type = "number", min = "0", max=Model.Zanimanja[i].MaxKolicina, step = "1" })
                                &nbsp;
                                &nbsp;
                                Ukupno
                                @Html.DisplayFor(it => Model.Zanimanja[i].MaxKolicina)
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <div class="form-group">
                <label>Oprema</label>
                <br />
                <table>
                    @for (int i = 0; i < Model.Oprema.Capacity; i++)
                    {
                        <tr>
                            <td>
                                @Html.HiddenFor(x => Model.Oprema[i].ID)
                                @Html.HiddenFor(it => Model.Oprema[i].Ime)
                                -&nbsp;
                                @Html.DisplayFor(it => Model.Oprema[i].Ime)
                            </td>
                            <td>
                                &nbsp;
                                &nbsp;
                                &nbsp;
                                @Html.TextBoxFor(it => Model.Oprema[i].Kolicina, new { Style = "vertical-align:3px; margin-top:3px; width:65px;", type = "number", min = "0", max=Model.Oprema[i].MaxKolicina, step = "1" })
                                &nbsp;
                                &nbsp;
                                Ukupno
                                @Html.DisplayFor(it => Model.Oprema[i].MaxKolicina)
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <br />

            <div class="form-group">
                <input type="submit" value="Potvrdi" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazad na popis</a>
</div>
<br />
<br />
<br />


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
